@{
    ViewData["Title"] = "GetCard";
    var data = ViewData["Type"] as BankCardTypeModel;
}
@model GetBankCardViewModel
<main class="mtop">
    <div class="container card bg-photo bga">
        <div class="bgasd container" style="border-radius: 10px; background-color: #232324;">
            <img src="~/img/images/BetaBank-@(data.Name.ToLower()).png" width="250px" style="border-radius:15px;"
                 class="img-fluid pt-1">
            <h4 class="pt-3" style="font-weight: bold;">@data.Name.ToLower()</h4>
            <ul class="px-3 Cards-Ul" style="list-style-type: disc;">
                <li>Up to 30% cashback and 2x VAT</li>
                <li>About 7500 partners</li>
            </ul>
        </div>
        <form class="mt-3" method="post">
            <div class="d-flex" style="gap: 1rem;">
                <input asp-for="IsTermsAndConditionsAccepted" id="IsTermsAndConditionsAccepted" name="IsTermsAndConditionsAccepted" required>
                <span asp-validation-for="IsTermsAndConditionsAccepted" class="text-danger"></span>

                <label for="check" class="text-white">By obtaining the card, I accept the <a style="color: white; text-decoration: underline;" href="~/files/Terms and Conditions.pdf" download="Terms&Conditions.pdf">terms and conditions</a>.</label>
            </div>
            <button asp-route-id="@data.Id" type="submit" id="orderButton" class="btn btn-success btns-hover mt-5 btn-width-all" disabled>
                Order
            </button>
        </form>
    </div>
</main>
@section Scripts{
    <script>
        document.getElementById('IsTermsAndConditionsAccepted').addEventListener('change', function () {
            document.getElementById('orderButton').disabled = !this.checked;
        });
    </script>
}
