<main class="mtop">
    <div class="container card bg-photo bga">
        <div class="">
            <div class="row details">
            </div>

            <div class="row mt-2 mb-3">
                <h3 class="card-title text-light">Subscriptions</h3>
            </div>
            <div class="row details container">

 

                @if (SecondaryData == "Utility")
                {
                    @foreach (var item in data)
                    {
                        <p asp-action="UtilitySubscriptionTransaction" asp-route-id="@item.Id" class="text-light btn btn-secondary ">
                            <img src="~/img/Komunallar/@Html.Raw($"{@item.Name}.png")" width="65px" class="img-fluid ">@item.Name<span></span> <span class="mt-3 text-dark" style="font-weight: bold;"><i class="fa fa-angle-double-right" aria-hidden="true" style="color: #2fe404;"></i></span>
                        </p>
                    }
                }
                else if (SecondaryData == "Internet")
                {
                    @foreach (var item in data)
                    {
                        <p asp-action="InternetProviderSubscriptionTransaction" asp-route-id="@item.Id" class="text-light btn btn-secondary ">
                            <img src="~/img/Internet/@Html.Raw($"{@item.Name}.png")" width="65px" class="img-fluid ">@item.Name<span></span> <span class="mt-3 text-dark" style="font-weight: bold;"><i class="fa fa-angle-double-right" aria-hidden="true" style="color: #2fe404;"></i></span>
                        </p>
                       
                    }
                }
            </div>
        </div>
    </div>
</main>
