@{
    ViewData["Title"] = "Register";

}
@model RegisterViewModel
<main role="main" class="mt-5">
    <!-- Start Slider Area -->
    <div class="login-area area-padding fix ">
        <div class="login-overlay"></div>
        <div class="table-cell">
            <div class="container center">
                <div class="col-lg-offset-3 col-lg-6 col-md-offset-2 col-md-8 col-sm-12">
                    <div class="login-form signup-form mn bga">
                        <h4 class="login-title text-center">REGISTER</h4>
                        <div class="row">
                            <form method="POST" class="log-form bga">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input class="form-control" asp-for="FirstName" placeholder="Your FirstName" required data-error="Please enter your name">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input class="form-control" asp-for="LastName" placeholder="Your LastName" required data-error="Please enter your message subject">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input class="form-control" asp-for="Email" placeholder="Email" required data-error="Please enter your name">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input type="text" class="form-control" asp-for="FIN" placeholder="FIN" required data-error="Please enter your message subject">
                                    <span asp-validation-for="FIN" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Phone Number" required data-error="Please enter your message subject">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input class="form-control" asp-for="DateOfBirth" required data-error="Please enter your message subject " type="date">
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input class="form-control" asp-for="Password" placeholder=" Password" required data-error="Please enter your message subject">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input class="form-control" asp-for="PasswordConfirm" placeholder="Confirm Password" required data-error="Please enter your message subject">
                                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                </div>


                                <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                                    <button type="submit" class="slide-btn btn btn-outline-success mzn">Register</button>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                                    <div class="clear"></div>

                                    <div class="sign-icon">
                                        <div class="     text-xl">Do you have account?  <a class="pages" asp-controller="Auth" asp-action="Login">Login</a></div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <!-- End Slider Area -->
</main>




