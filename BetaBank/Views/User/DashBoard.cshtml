
@{
    ViewData["Title"] = "DashBoard";
    var data = ViewData["DashBoardViewModel"] as DashBoardViewModel;
}
<section style="display: flex;padding-top: 150px;color: black;">
    <nav style="width: 200px; background: #f4f4f4; padding: 20px;">
        <ul style="list-style-type: none; padding: 0;">
            <li style="margin: 10px 0;"><a href="#" onclick="showSection('dashboard')">Dashboard</a></li>
            <li style="margin: 10px 0;"><a href="#" onclick="showSection('account-cards')">Accounts and Cards</a></li>
            <li style="margin: 10px 0;"><a href="#" onclick="showSection('payments')">Payments</a></li>
            <li style="margin: 10px 0;"><a href="logout.html">Log Out</a></li>
        </ul>
    </nav>
    <section style="flex-grow: 1; padding: 20px;">
        <div id="dashboard" class="section" style="display: block;">
            <h2>Dashboard</h2>
             <form>
                 <div>
                     <label>First Name:</label>
                     <input asp-for="@data.User.FirstName"  id="name" name="name">
                 </div>
                 <div>
                     <label >Last Name:</label>
                     <input asp-for="@data.User.LastName"  id="lastName" name="lastName" >
                 </div>
                 <div>
                     <label >Phone Number:</label>
                     <input asp-for="@data.User.PhoneNumber"  id="phone" name="phone" >
                 </div>
                 <div>
                     <label >Email:</label>
                     <input asp-for="@data.User.Email"  id="mail" name="mail" >
                 </div>
                 <div>
                     <label >Date Of Birth:</label>
                     <input asp-for="@data.User.DateOfBirth" type="text" id="dateOfBirth" name="dateOfBirth" >
                 </div>
                 <div>
                     <label>Created Date:</label>
                     <input asp-for="@data.User.CreatedDate" type="text" id="createdDate" name="createdDate">
                 </div>
                 <div>
                     <label>Updated Date:</label>
                     <input asp-for="@data.User.UpdateDate" type="text" id="updatedDate" name="updatedDate">
                 </div>
             </form>
        </div>
        <div id="account-cards" class="section" style="display: none;">
            <h2>Accounts and Cards</h2>
                    @if(data.BankAccount != null)
                    {
                <div style="border: 1px solid #000; padding: 10px; margin-bottom: 20px;">
                    <h3 style="color: #000;">IBAN: @data.BankAccount.IBAN</h3>
                    <h3 style="color: #000;">Account Number: @data.BankAccount.AccountNumber</h3>
                    <p style="color: #000;">Balance: @data.BankAccount.Balance</p>

                </div>
                    }
                @if (data.BankCards != null)
                    {
                @foreach (var BankCard in data.BankCards)
                        {
                    <div class="card" style="display: flex; justify-content: space-between; padding: 10px; border: 1px solid #000; margin-bottom: 10px;">
                        <div>
                            <h4 style="color: #000;">@BankCard.CardNumber</h4>
                            <p style="color: #000;">Balance: $@BankCard.Balance</p>
                        </div>
                        <div class="card-icon" style="width: 40px; height: 40px; background-color: #000;"></div>
                    </div>
                        }
                    }
            @if (data.CashBack != null)
            {
                <div style="border: 1px solid #000; padding: 10px; margin-bottom: 20px;">
                    <h3 style="color: #000;">CashBackBalance: @data.CashBack.Balance</h3>


                </div>
            }
            
            
        </div>
        <div id="payments" class="section" style="display: none;">
            <h2>Payments</h2>
            <p>Coming Soon</p>
        </div>
    </section>

    <script>
        function showSection(sectionId) {
            var sections = document.querySelectorAll('.section');
            sections.forEach(function (section) {
                section.style.display = 'none';
            });
            var selectedSection = document.getElementById(sectionId);
            if (selectedSection) {
                selectedSection.style.display = 'block';
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            showSection('dashboard');
        });
    </script>
</section>

