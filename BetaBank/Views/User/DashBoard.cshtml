
@{
    ViewData["Title"] = "DashBoard";
}

<section class="profile">
    <div class="container" style="display: flex; width: 100%; padding-top: 150px;">
        <nav style="width: 200px; background: #f4f4f4; padding: 20px;">
            <ul style="list-style-type: none; padding: 0;">
                <li style="margin: 10px 0;"><a href="#" onclick="showSection('dashboard')">Dashboard</a></li>
                <li style="margin: 10px 0;"><a href="#" onclick="showSection('profile-info')">Profile Information</a></li>
                <li style="margin: 10px 0;"><a href="#" onclick="showSection('bank-accounts')">Bank Accounts</a></li>
                <li style="margin: 10px 0;"><a href="#" onclick="logout()">Log Out</a></li>
            </ul>
        </nav>
        <main style="flex-grow: 1; padding: 20px;">
            <div id="dashboard" class="section">
                <h2>Dashboard</h2>
                <p>Welcome to your dashboard.</p>
            </div>
            <div id="profile-info" class="section" style="display: none;">
                <h2>Profile Information</h2>
                <form id="profileForm">
                    <div>
                        <label for="bankName">Bank Name:</label>
                        <input type="text" id="bankName" name="bankName">
                    </div>
                    <div>
                        <label for="accountHolder">Account Holder:</label>
                        <input type="text" id="accountHolder" name="accountHolder">
                    </div>
                    <div>
                        <label for="accountNumber">Account Number:</label>
                        <input type="text" id="accountNumber" name="accountNumber">
                    </div>
                    <div>
                        <label for="iban">IBAN:</label>
                        <input type="text" id="iban" name="iban">
                    </div>
                    <div>
                        <label for="swiftCode">SWIFT Code:</label>
                        <input type="text" id="swiftCode" name="swiftCode">
                    </div>
                    <div>
                        <label for="branchAddress">Branch Address:</label>
                        <input type="text" id="branchAddress" name="branchAddress">
                    </div>
                    <div>
                        <label for="branchCode">Branch Code:</label>
                        <input type="text" id="branchCode" name="branchCode">
                    </div>
                    <div>
                        <label for="country">Country:</label>
                        <input type="text" id="country" name="country">
                    </div>
                    <div>
                        <label for="currency">Currency:</label>
                        <input type="text" id="currency" name="currency">
                    </div>
                    <button type="button" onclick="saveProfile()">Save</button>
                </form>
                <button type="button" onclick="logout()">Log Out</button>
            </div>
            <div id="bank-accounts" class="section" style="display: none;">
                <h2>Bank Accounts</h2>
                <div>
