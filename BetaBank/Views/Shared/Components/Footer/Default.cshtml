<script>
    document.getElementById('sus_submit').addEventListener('click', function () {
        var selectedPrefix = document.getElementById('sus_email').value;


        fetch(`/Home/Subscribe?id=${selectedPrefix}`)
                .then(response => response.json())
                .then(data => {

                document.getElementById('responseMessage').textContent = data.message;
            })
                
        
    });


</script>

