@{
    ViewData["Title"] = "Notification Mails";
}
@model SendedNotificationMail
@await Component.InvokeAsync("SuperAdminBox")

<div class="col-md-9 mt-sm-3 mt-md-0">
    <!-- Panel for new entry creation -->
    <div clas="card">
        <div class="card-header main-color-bg">
            View
        </div>
        <div class="card-body">
            <div class="row">
       
                <div class="col-md-9">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@Html.Raw(@Model.Title)</h5>
                            <p class="card-text">@Html.Raw(@Model.Body)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Created Date and Updated Date -->
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Created Date:</strong> <span id="created-date">@Model.CreatedDate</span></p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <button onclick="javascript:history.back()" class="btn btn-secondary">Back</button>
                </div>
            </div>
        </div>
    </div>
</div>  
   
@section Scripts {
    <script>


        document.getElementById("@TempData["Tab"]-tab").classList.add("active", "main-color-bg");
        


    </script>
}
