@{
    ViewData["Title"] = "Wallets";
    var data = ViewData["Wallets"] as List<BetaBank.Areas.SuperAdmin.ViewModels.CashBackViewModel>;
}


@await Component.InvokeAsync("SuperAdminBox")
<div class="col-md-9 mt-sm-3 mt-md-0">
    <!--Panel for website overview-->
    <div class="card">
        <div class="card-header main-color-bg">
            Wallets
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">User</th>
                        <th scope="col">Wallet Number</th>
                        <th scope="col">Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wallet in data)
                    {
                        <tr>
                            <td>
                                <a asp-action="Detail" asp-controller="User" asp-route-id="@wallet.UserId" style="color:#FFFFFF;">
                                    <img src="~/img/data/@wallet.UserProfilePhoto" class="img-fluid rounded-circle" style="width: 45px; height: 45px; object-fit: cover;">
                                    @wallet.UserFirstName @wallet.UserLastName
                                    </a>

                            </td>
                            <td>
                                @wallet.CashBackNumber
                            </td>
                            <td>@wallet.Balance.ToString("C")</td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>

        document.getElementById("@TempData["Tab"]-tab").classList.add("active", "main-color-bg");

    </script>
}



