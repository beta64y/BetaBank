
@{
    ViewData["Title"] = "News";
}

@model AdminNewsViewModel
@await Component.InvokeAsync("AdminBox")
<div class="col-md-9 mt-sm-3 mt-md-0">
    <!--Panel for website overview-->
    <div class="card">
        <div class="card-header main-color-bg">
            News
        </div>
        <div class="card-body">
            @await Component.InvokeAsync("AdminNewsSearch")
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">First Image</th>
                        <th scope="col">Second Image</th>
                        <th scope="col">Created Date</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var news in Model.News)
                    {
                        <tr>
                            <td>@Html.Raw(@news.Title)</td>
                            <td><img class="w-100" src="~/img/website-images/@news.FirstImage" alt="NotFound" /></td>
                            <td><img class="w-100" src="~/img/website-images/@news.SecondImage" alt="NotFound" /></td>
                            <td>@news.CreatedDate</td>

                            <td>
                                <a asp-controller="News" asp-action="Edit" asp-route-id="@news.Id" class="btn btn-warning">Edit</a>
                            </td>
                            <td><a asp-controller="News" asp-action="Detail" asp-route-id="@news.Id" class="btn btn-light">View</a></td>
                            <td>
                                <a asp-controller="News" asp-action="Delete" asp-route-id="@news.Id" class="btn btn-danger newsDeleteBtn" >Delete</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>


        document.getElementById("@TempData["Tab"]-tab").classList.add("active", "main-color-bg");
        


    </script>
}

