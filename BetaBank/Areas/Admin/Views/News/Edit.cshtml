@{
    ViewData["Title"] = "News";
}
@model NewsUpdateViewModel
@await Component.InvokeAsync("AdminBox")
<div class="col-md-9 mt-sm-3 mt-md-0">
    <!-- Panel for new entry creation -->
    <div class="card">
        <div class="card-header main-color-bg">
            Edit
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input asp-for="Title" class="form-control" id="title" placeholder="Enter title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea asp-for="Description" class="form-control" id="description" placeholder="Enter description" required rows="10"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="firstImage">First Image</label>
                    <input asp-for="FirstImage" class="form-control-file" name="FirstImage"  />
                    <span asp-validation-for="FirstImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="secondImage">Second Image</label>
                    <input asp-for="SecondImage" class="form-control-file" name="SecondImage"  />
                    <span asp-validation-for="SecondImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn main-color-bg" value="Submit" />
                    <a href="javascript:history.back()" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>


        document.getElementById("@TempData["Tab"]-tab").classList.add("active", "main-color-bg");
        


    </script>
}