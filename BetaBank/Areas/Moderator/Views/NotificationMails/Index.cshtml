@{
    ViewData["Title"] = "Notification Mails";

}




@model ModeratorNotificationMailViewModel
@await Component.InvokeAsync("ModeratorBox")
<div class="col-md-9 mt-sm-3 mt-md-0">
    <!--Panel for website overview-->
    <div class="card">
        <div class="card-header main-color-bg">
            Notification Mails
        </div>
        <div class="card-body">
            @*await Component.InvokeAsync("ModeratorNewsSearch")*@
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Created Date</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var notificationMail in Model.NotificationMails)
                    {
                        <tr>
                            <td>@Html.Raw(@notificationMail.Title)</td>
                            <td>@notificationMail.CreatedDate</td>

                            <td>
                                <a asp-controller="NotificationMails" asp-action="ViewMail" asp-route-id="@notificationMail.Id" class="btn btn-light">View</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>


        document.getElementById("@TempData["Tab"]-tab").classList.add("active", "main-color-bg");
        document.getElementById("@TempData["Tab"]-nav-item").classList.add("active");



    </script>
    
}

