@model NewsCreateViewModel

<div class="col-md-9 mt-sm-3 mt-md-0">
    <!-- Panel for new entry creation -->
    <div class="card">
        <div class="card-header main-color-bg">
            Create New Entry
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="Title" placeholder="Enter title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="Description" placeholder="Enter description" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="firstImage">First Image</label>
                    <input type="file" class="form-control-file" id="firstImage" name="FirstImage" required />
                    <span asp-validation-for="FirstImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="secondImage">Second Image</label>
                    <input type="file" class="form-control-file" id="secondImage" name="SecondImage" required />
                    <span asp-validation-for="SecondImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Create" />
                    <a href="javascript:history.back()" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
